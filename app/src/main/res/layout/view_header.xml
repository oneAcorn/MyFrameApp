<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/anchorIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_anchor_24"
        app:tint="@color/qmui_config_color_50_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Header"
        android:textColor="@color/qmui_config_color_50_blue"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/anchorIv"
        app:layout_constraintRight_toRightOf="@id/anchorIv"
        app:layout_constraintTop_toBottomOf="@id/anchorIv" />
</androidx.constraintlayout.widget.ConstraintLayout>